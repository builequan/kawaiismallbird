# Database connection - Dokploy PostgreSQL
DATABASE_URI=postgres://postgres:your_secure_password@db:5432/kawaii_bird

# Application secrets (generate new ones for production!)
PAYLOAD_SECRET=generate_a_32_char_random_string_here
PREVIEW_SECRET=generate_another_random_string_here
CRON_SECRET=generate_cron_secret_here

# Your production domain
NEXT_PUBLIC_SERVER_URL=https://yourdomain.com

# Email configuration
RESEND_API_KEY=your_resend_api_key
CONTACT_EMAIL_TO=your-email@example.com

# Google reCAPTCHA v3 keys (get from https://www.google.com/recaptcha/admin)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# GitHub (optional, for admin features)
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_if_needed

# Node environment
NODE_ENV=production