FROM node:18-alpine

WORKDIR /app

# Create a simple test server
RUN echo 'const http = require("http"); const server = http.createServer((req, res) => { res.writeHead(200); res.end("Hello from Dokploy!"); }); server.listen(3000, "0.0.0.0", () => { console.log("Server running on port 3000"); });' > server.js

EXPOSE 3000

CMD ["node", "server.js"]