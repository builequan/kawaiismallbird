# Example environment variables file
# Copy this to .env and fill in your actual values

# Database connection
DATABASE_URI=postgresql://user:password@localhost:5432/your-database

# Payload CMS Secret (minimum 32 characters)
PAYLOAD_SECRET=your-secret-key-minimum-32-characters-long

# Server URL
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Node environment
NODE_ENV=development

# For production deployments
PORT=3000
HOSTNAME=0.0.0.0

# Google Analytics & Search Console
# Get GA Measurement ID from Google Analytics 4 property settings
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# Get verification code from Google Search Console
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your-verification-code-here

# Local database credentials (for scripts)
LOCAL_DB_PASSWORD=your-local-password

# Dokploy deployment (if using)
DOKPLOY_HOST=your-dokploy-server-ip
DOKPLOY_DB_PASSWORD=your-dokploy-password